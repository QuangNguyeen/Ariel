{{#> app}}
    {{#*inline "content"}}
        {{#with viewData.product}}
            <div class="card mb-3" xmlns="http://www.w3.org/1999/html">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/uploads/{{getImage}}" class="img-fluid rounded-start" alt="{{getName}}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{getName}} (${{getPrice}})</h5>
                            <p class="card-text">{{getDescription}}</p>
                            <form method="POST" action="/cart/add/{{getId}}">
                                <div class="row">
                                    <div class="col-auto">
                                        <div class="input-group">
                                            <div class="input-group-text">Quantity</div>
                                            <input type="number" min="1" max="10" name="quantity" value="1" class="form-control quantity-input">
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn bg-primary text-white">Add to cart</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    {{/inline}}
{{/app}}
